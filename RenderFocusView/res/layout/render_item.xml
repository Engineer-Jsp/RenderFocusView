<?xml version="1.0" encoding="utf-8"?>

<com.example.renderfocusview.RenderFocusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:RenderAlpha="0.2"
    app:RenderColor="#FF0000"
    app:RenderHover="true"
    app:RenderOverlay="true">

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/render"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="20sp" />

</com.example.renderfocusview.RenderFocusView>